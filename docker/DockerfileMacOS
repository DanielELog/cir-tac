ARG OSXCROSS_VERSION=latest
FROM crazymax/osxcross:${OSXCROSS_VERSION}-ubuntu AS osxcross

ARG DEBIAN_FRONTEND=noninteractive

FROM ubuntu

COPY --from=osxcross /osxcross /osxcross

RUN apt-get update && apt-get install -y \
  clang cmake lld libc6-dev git python3 zlib1g-dev ninja-build
ENV PATH="/osxcross/bin:$PATH"

COPY docker/buildClangir.sh ./
RUN chmod +x buildClangir.sh

ENV CC=clang
ENV CXX=clang++

ENV MACOSX_DEPLOYMENT_TARGET=11.1

ENV LD_LIBRARY_PATH="/osxcross/lib:$LD_LIBRARY_PATH"
ENV SDKROOT="/osxcross/SDK/MacOSX14.5.sdk"
RUN --mount=type=bind,from=osxcross,source=/osxcross,target=/osxcross \
  ./buildClangir.sh
